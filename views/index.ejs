

<body>
	<%- include("partials/header.ejs") %>

<div class="wrapper">

	<!-- Show form if this is the first time opening the site.  -->
	<% if (!locals.events) { %>
		<form action="/submit" method="post">
			<label for="month">Month: </label>
			<select id="month" name="month">
				<option value="1">January</option>
				<option value="2">February</option>
				<option value="3">March</option>
				<option value="4">April</option>
				<option value="5">May</option>
				<option value="6">June</option>
				<option value="7">July</option>
				<option value="8">August</option>
				<option value="9">September</option>
				<option value="10">October</option>
				<option value="11">November</option>
				<option value="12">December</option>
			</select>

			<label for="day">Day: </label>
			<input type="number" name="day" id="day" min="1" max="31" value="1">

			<input type="submit" style="width: 5em;">
		</form>

	<!-- Show events -->
	<% } else { %>
		<main>
			<!-- Information bar -->
			<div class="info-bar">
				<div class="est">Est. 0000</div>
				<div class="date"> <%=date[0]%>/<%=date[1]%></div>
				<div class="price">2cents</div>
			</div>

			<div class="events-grid">
				<!-- Display all of the events -->
				<% for (var i = 0; i < events.length; i++) { %>

					<!-- Make temp ad -->
					<% if (i == 1) { %>
					<div class="event ad">
						<div class="outer-border">
							<div class="ad-logo">
								<p class="">Cosmi Coffee!</p>
								<img src="./images/ads/cosmi-coffee.png" alt="cosmi coffee">
							</div>
							<p>Sip the finest coffee of the cosmos!</p>
						</div>
					</div>
					<% } %>

					<!-- Show important births -->
					<% if ((i == 7) && (locals.births)) { %>
						<div class="event births-container">
							<h2>Important births:</h2>
							
							<!-- Iterate thought all births -->
							<% for (var x = 0; x < births.length; x++) { %>
								<p>
									<%= births[x].year %>
								</p>
								<p>
									<a href=<%=births.link%>>
										<%= births[x].name %>
									</a>
								</p>
							<% } %>
						</div>
					<% } %>

					<!-- Show important deaths -->


					<!-- Special event -->
					<% if (events[i].is_special) { %>
						<div class="event event<%=i%> special-event">
							<a href=<%=events[i].link%>><p><%=events[i].title%></p></a>
							<p><%=events[i].year%></p>
							<p><%=events[i].description%></p>
							<img src="/images/exc-mark-2.png" alt="exclamation mark">
							<!-- <img src="./images/exc-mark-2.png" alt="exclamation mark" style="float: left;"> -->

						</div>
					
					<!-- Normal event -->
					<% } else { %>
						<div class="event event<%=i%>">
							<a href=<%=events[i].link%>><p><%=events[i].title%></p></a>
							<p><%=events[i].year%></p>
							<p><%=events[i].description%></p>
						</div>
					<% } %>	
				<% } %> <!-- End of getting all events -->
			</div>
		</main>

	<% } %>
</div>

